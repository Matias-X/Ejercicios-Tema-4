
// IF

let numeroIf = -6;
 if (numeroIf > 0) {
    console.log("Este numero es positivo!");
} else if (numeroIf < 0) {
    console.log("Este numero es negativo!");
} else {
    console.log("Este numero es igual a 0");
}


// WHILE




// SWITCH

let estaciones = "adasd"
switch (estaciones) {
    case "verano":
        console.log("Estamos en Verano!");
        break;
    case "otoño":
        console.log("Estamos en Otoño!");
        break;
    case "invierno":
        console.log("Estamos en Invierno!");
        break;
    case "primavera":
        console.log("Estamos en primavera!");
        break;
    default: 
        console.log("La estacion no existe.");
        
 }
